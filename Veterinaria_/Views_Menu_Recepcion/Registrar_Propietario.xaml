<UserControl x:Class="Veterinaria_.Views.Registrar_Propietario"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Veterinaria_.Views"
             mc:Ignorable="d" 
         d:DesignHeight="565" 
         d:DesignWidth="925"
         Background="Transparent">
    <!--#REGION CONTENIDO-->
    <Border CornerRadius="10"
        Background="#FFD2E0FB">
        <Grid x:Name="GridRegistrarPropietario">
            <!--#REGION TITULO-->
            <TextBlock Grid.Row="0"
                   Text="Registrar_Propietario"
                   Foreground="Black"
                   FontSize="30"
                   HorizontalAlignment="Center" Height="46" VerticalAlignment="Top"/>
            <Label Content="Nombre" HorizontalAlignment="Left" Margin="49,106,0,0" VerticalAlignment="Top" Height="26" Width="60"/>
            <TextBox x:Name="txt_Nombre" HorizontalAlignment="Left" Margin="114,110,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="186" Height="22"/>
            <Label Content="Apellido" HorizontalAlignment="Left" Margin="52,158,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.526,0.039"/>
            <TextBox x:Name="txt_Apellido" HorizontalAlignment="Left" Margin="114,162,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="186" Height="22"/>
            <Label Content="Telefono" HorizontalAlignment="Left" Margin="407,108,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txt_Telefono" HorizontalAlignment="Left" Margin="480,112,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="186" Height="22"/>
            <Label Content="Sexo" HorizontalAlignment="Left" Margin="417,160,0,0" VerticalAlignment="Top"/>
            <ComboBox Name="cmb_Sexo" HorizontalAlignment="Left" Margin="480,164,0,0" VerticalAlignment="Top" Width="120">
                <ComboBoxItem>Masculino</ComboBoxItem>
                <ComboBoxItem>Femenino</ComboBoxItem>
                <ComboBoxItem>Otros</ComboBoxItem>
            </ComboBox>
            <Label Content="Fecha de nacimiento" HorizontalAlignment="Left" Margin="52,232,0,0" VerticalAlignment="Top"/>
            <Label Content="Tipo de documento" HorizontalAlignment="Left" Margin="207,312,0,0" VerticalAlignment="Top"/>
            <ComboBox Name="cmb_Tipo_documento" HorizontalAlignment="Left" Margin="346,316,0,0" VerticalAlignment="Top" Width="120">
                <ComboBoxItem>Cedula</ComboBoxItem>
                <ComboBoxItem>Targeta de indentidad</ComboBoxItem>
                <ComboBoxItem>Otros</ComboBoxItem>
            </ComboBox>
            <Label Content="Numero de documento" HorizontalAlignment="Left" Margin="207,361,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txt_Numero_documento" HorizontalAlignment="Left" Margin="346,365,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="186" Height="22"/>
            <Button x:Name="btn_Guardar" Content="Guardar" HorizontalAlignment="Center" Margin="0,466,0,0" VerticalAlignment="Top" Width="129" Height="35" Click="btn_Guardar_Click"/>
            <DatePicker Name="dtp_Fecha" HorizontalAlignment="Left" Margin="52,263,0,0" VerticalAlignment="Top"/>


            <!--#ENDREGION-->
        </Grid>
    </Border>
    <!--#ENDREGION-->
</UserControl>
