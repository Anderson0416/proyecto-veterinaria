    </Window.Resources>

    <!--#REGION PROYECTO_DE_AULA-->
    <Border CornerRadius="10"
        Background="GhostWhite">
        <Grid Name="Principal"
          Background="Transparent">

            <!--#REGION HEADER-->
            <Grid Name="Header"
              Height="35"
              VerticalAlignment="TOP"
              Background="Transparent">

                <Border CornerRadius="10,10,0,0"
                    Background="#73C897"/>
                <Grid>
                    <Grid.ColumnDefinitions>

                        <ColumnDefinition/>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="100"/>

                    </Grid.ColumnDefinitions>

                    <!--#REGION TITLE-->

                    <TextBlock Text="ADMINISTRADOR"
                              Grid.Column="0"
                               Foreground="Black"
                               FontSize="20"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center" Margin="453,0,0,0"/>

                    <!--#ENDREGION-->
                    
                    <!--#Region SALIDA--><!--
                    

                    <Button     Style="{DynamicResource BtnHeaderStyle}"
                            x:Name="BtnSalida"
                            Grid.Column="1"
                            Background="Transparent"
