                      HorizontalAlignment="Right"
                      VerticalAlignment="Top"
                      Margin="0,10,10,0">

                        <ToggleButton Style="{DynamicResource BtnShowHide}" x:Name="BtnShowHide"
                                  Width="30"
                                  Height="30"
                                  Cursor="Hand"
                                  BorderBrush="Transparent" Checked="TBShow" Unchecked="TBHide">
                            <ToggleButton.Background>
                                <ImageBrush ImageSource="/SCS/Pictures/Menu.png"/>

                            </ToggleButton.Background>
                            <ToggleButton.Triggers>
                                <!--#REGIONHIDE-->
                                <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                                    <BeginStoryboard>
                                        <Storyboard x:Name="HidePanel">
                                            <DoubleAnimation Storyboard.TargetName="GridMenu"
                                                         Storyboard.TargetProperty="Width"
                                                         BeginTime="0:0:0"
                                                         From="230" To =" 75"
                                                         Duration="0:0:0:0.5"/>

                                        </Storyboard>
                                    </BeginStoryboard>

                                </EventTrigger>
                                <!--#ENDREGION-->
                                <!--#REGIONSHOW-->
                                <EventTrigger RoutedEvent="ToggleButton.Checked">
                                    <BeginStoryboard>
                                        <Storyboard x:Name="ShowPanel">
                                            <DoubleAnimation Storyboard.TargetName="GridMenu"
                          Storyboard.TargetProperty="Width"
                          BeginTime="0:0:0"
                          From="75" To ="230"
                          Duration="0:0:0:0.5"/>

                                        </Storyboard>

                                    </BeginStoryboard>

                                </EventTrigger>
                                <!--#ENDREGION-->
                            </ToggleButton.Triggers>
                        </ToggleButton>
                    </Grid>
                    <!--#ENDREGION-->

                    <!--#REGION LISTA-->
                    <ListView Background="Transparent"
                          BorderBrush="Transparent"
                          Margin="0,30,0,0"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled" Cursor="Hand">

                        <!--#REGION REGISTRAR_VETERINARIO-->
                        <ListViewItem Style="{DynamicResource ListViewStyle}"
           Height="70" Cursor="Hand">
                            <Button Style="{DynamicResource BtnListaStyle}"
         x:Name="BtnRegistrarVeterinario"
         Height="70"
         Width="200"
         HorizontalAlignment="Left"
         Cursor="Hand"
         Background="Transparent"
         BorderBrush="Transparent"
         Click="Registrar_Veterinario_Click">

                                <Grid Width="200">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Image Width="40"
                Grid.Column="0"
                HorizontalAlignment="Center"
                Source="/SCS/Pictures/Register - Veterian.png"/>
                                    <TextBlock Grid.Column="1"
                    Text="Registrar Veterinario"
                    FontWeight="SemiBold"
                    FontSize="12"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>

                                </Grid>
                            </Button>

                        </ListViewItem>
                        <!--#ENDREGION-->

                        <!--#REGION REGISTRAR_RECEPCIONISTA-->
                        <ListViewItem Style="{DynamicResource ListViewStyle}"
                           Height="70">
                            <Button Style="{DynamicResource BtnListaStyle}"
                            x:Name="BtnRegistrarRecepcionista"
                            Height="70"
        Width="200"
        HorizontalAlignment="Left"
        Cursor="Hand"
        Background="Transparent"
        BorderBrush="Transparent" 
                                    Click="Registrar_Recepcionista_Click">

                                <Grid Width="200">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Image Width="40"
               Grid.Column="0"
               HorizontalAlignment="Left"
               Source="/SCS/Pictures/Register - Recepcionist.png" 
                                     Margin="10,0,0,0"/>
                                    <TextBlock Grid.Column="1"
                   Text="Registrar Recepcionista"
                   FontWeight="SemiBold"
                   FontSize="12"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>

                                </Grid>
                            </Button>

                        </ListViewItem>
                        <!--#ENDREGION-->

                        <!--#REGION CONSULTAR-->
                        <ListViewItem Style="{DynamicResource ListViewStyle}"
          Height="70">
                            <Button Style="{DynamicResource BtnListaStyle}"
        x:Name="BtnConsultar"
        Height="70"
        Width="200"
        HorizontalAlignment="Left"
        Cursor="Hand"
        Background="Transparent"
        BorderBrush="Transparent" 
                                    Click="Consultar_Click">

                                <Grid Width="200">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Image Width="40"
               Grid.Column="0"
               HorizontalAlignment="Center"
               Source="/SCS/Pictures/consult.png"/>
                                    <TextBlock Grid.Column="1"
                   Text="Consultar"
                   FontWeight="SemiBold"
                   FontSize="12"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>

                                </Grid>
                                <!-- ContextMenu para el submenú -->
                                <Button.ContextMenu>
                                    <ContextMenu>
                                        <ContextMenu.ItemContainerStyle>
                                            <Style TargetType="MenuItem">
                                                <Setter Property="Background" Value="#b7e4c7"/>
                                                <Setter Property="Foreground" Value="Transparent"/>
                                                <Setter Property="Padding" Value="10,5"/>
                                                <Setter Property="FontSize" Value="14"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="MenuItem">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                BorderBrush="White" BorderThickness="1" 
                                                                CornerRadius="8" Padding="5">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <!-- Texto del menú -->
                                                                    <TextBlock Text="{TemplateBinding Header}" 
                                                                        VerticalAlignment="Center" 
                                                                        Foreground="Black"/>
                                                                        <!-- Flecha indicando submenú -->
                                                                        <TextBlock Text=">"
                                                                            Margin="10,0,0,0" 
                                                                               Foreground="Black"
                                                                                Visibility="{Binding Path=HasItems, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                                </StackPanel>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <!-- Hover cambia el fondo a verde menta -->
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#FFBFF6C3"/>
                                                                    <Setter Property="Foreground" Value="#2E2E2E"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ContextMenu.ItemContainerStyle>

                                        <!-- Definición del submenú -->
                                        <MenuItem Header="Consultar Recepcionista" Click="Consultar_Recepcionista_Click">
                                        </MenuItem>
                                        <MenuItem Header="Consultar Veterinario" Click="Consultar_Veterinario_Click"/>
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>

                        </ListViewItem>
                        <!--#ENDREGION-->

                        <!--#REGION REGISTRAR_PRODUCTO-->
                        <ListViewItem Style="{DynamicResource ListViewStyle}"
                   Height="70">
                            <Button Style="{DynamicResource BtnListaStyle}"
                    x:Name="BtnRegistrarProducto"
                    Height="70"
Width="200"
HorizontalAlignment="Left"
Cursor="Hand"
Background="Transparent"
BorderBrush="Transparent"
                                    Click="Registrar_Producto_Click">


                                <Grid Width="200">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Image Width="47"
       Grid.Column="0"
       HorizontalAlignment="Left"
       Source="/SCS/Pictures/register-product.png" 
                             Margin="10,0,0,0"/>
                                    <TextBlock Grid.Column="1"
           Text="Registrar Producto"
           FontWeight="SemiBold"
           FontSize="12"
           VerticalAlignment="Center"
           HorizontalAlignment="Center"/>

                                </Grid>
                            </Button>

                        </ListViewItem>
                        <!--#ENDREGION-->

                        <!--#REGION REGISTRAR_TIPO_CONSULTA-->
                        <ListViewItem Style="{DynamicResource ListViewStyle}"
                   Height="70">
                            <Button Style="{DynamicResource BtnListaStyle}"
                    x:Name="BtnRegistrarTipoConsulta"
                    Height="70"
Width="200"
HorizontalAlignment="Left"
Cursor="Hand"
Background="Transparent"
BorderBrush="Transparent" Click="Registrar_Tipo_Consulta_Click">



                                <Grid Width="200">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Image Width="38"
       Grid.Column="0"
       HorizontalAlignment="Left"
       Source="/SCS/Pictures/register-type-consult.png"
                             Margin="10,0,0,0"/>
                                    <TextBlock Grid.Column="1"
           Text="Registrar Tipo Consulta"
           FontWeight="SemiBold"
           FontSize="12"
           VerticalAlignment="Center"
           HorizontalAlignment="Center"/>

                                </Grid>
                            </Button>

                        </ListViewItem>
                        <!--#ENDREGION-->
                        
                        <!--#REGION FACTURAS-->
                        <ListViewItem Style="{DynamicResource ListViewStyle}"
  Height="70" Cursor="Hand">
                            <Button Style="{DynamicResource BtnListaStyle}"
x:Name="BtnFacturas"
Height="70"
Width="200"
HorizontalAlignment="Left"
Cursor="Hand"
Background="Transparent"
BorderBrush="Transparent" Click="Facturas_Click">

                                <Grid Width="200">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Image Width="45"
       Grid.Column="0"
       HorizontalAlignment="Center"
       Source="/SCS/Pictures/all-quotes.png"/>
                                    <TextBlock Grid.Column="1"
           Text="Facturas"
           FontWeight="SemiBold"
           FontSize="12"
           VerticalAlignment="Center"
           HorizontalAlignment="Center"/>

                                </Grid>
                            </Button>

                        </ListViewItem>
                        
                        <!--#ENDREGION-->
                        
                    </ListView>
                    <!--#ENDREGION-->
                </StackPanel>
                <!--#ENDREGION-->

            </Grid>
            <!--#ENDREGION-->

        </Grid>
    </Border>
    <!--#ENDREGION-->

</Window>
